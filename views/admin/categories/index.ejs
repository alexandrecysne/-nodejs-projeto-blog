<%- include('../../partials/header.ejs')%>
<%- include('../../partials/navbar.ejs')%>
<body>
    <div class="container" id="formulario-blog">
        <div class="card">
            <div class="card-header">
                <h2>Categorias</h2>
                <a class="btn btn-success" href="/admin/categories/new">Nova Categoria</a>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Título</th>
                            <th>Slug</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% categories.forEach(category=> {%>
                            <tr>
                                <th>
                                    <%= category.id %>
                                </th>
                                <th>
                                    <%= category.title %>
                                </th>
                                <th>
                                    <%= category.slug %>
                                </th>
                                <th>
                                    <a href="/admin/categories/edit/<%= category.id%>" class="btn btn-warning">Editar</a>
                                    <form method="POST" action="/categories/delete" style="display: inline;"
                                        onsubmit="confirmDelete(event, this)">
                                        <input type="hidden" name="id" value="<%= category.id%>">
                                        <button class="btn btn-danger">Deletar</button>
                                    </form>
                                </th>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
<%- include('../../partials/footer.ejs')%>
<script>
    function confirmDelete(event, form) {
        event.preventDefault();
        var decision = confirm("Confirma deletar está categoria?");
        if (decision) {
            form.submit();
        }
    }
</script>